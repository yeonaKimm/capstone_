<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- 홈 화면 -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- 투표 게시판 화면 -->
    <fragment
        android:id="@+id/navigation_board"
        android:name="com.example.myapplication.ui.board.MainActivity_Board"
        android:label="@string/title_board"
        tools:layout="@layout/board_main" >

        <!-- 게시판 화면에서 투표글 목록으로 이동하는 액션 -->
        <action
            android:id="@+id/action_navigation_board_to_navigation_board_votelist"
            app:destination="@id/navigation_board_votelist"
            app:popUpTo="@id/navigation_board_votelist"
            app:popUpToInclusive="false" />

        <!-- 투표게시판 화면에서 홈 화면으로 이동하는 액션 -->
        <action
            android:id="@+id/action_navigation_board_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />

    </fragment>

    <!-- 투표글 목록 화면 -->
    <fragment
        android:id="@+id/navigation_board_votelist"
        android:name="com.example.myapplication.ui.board.PostList_Board"
        android:label="@string/title_board_votelist"
        tools:layout="@layout/board_votelist" >

        <!-- 투표글 목록 화면에서 등록 폼으로 이동하는 액션 -->
        <action
            android:id="@+id/action_navigation_board_votelist_to_navigation_board_regvote"
            app:destination="@id/navigation_board_regvote"
            app:popUpTo="@id/navigation_board_votelist"
            app:popUpToInclusive="false" />
    </fragment>

    <!-- 투표 등록 폼 화면 -->
    <fragment
        android:id="@+id/navigation_board_regvote"
        android:name="com.example.myapplication.ui.board.RegVote_Board"
        android:label="@string/title_board_regvote"
        tools:layout="@layout/board_regvote" >

        <!-- 투표등록 폼 화면에서 출력 폼으로 이동하는 액션 -->
        <action
            android:id="@+id/action_navigation_board_regvote_to_navigation_board_printvote"
            app:destination="@id/navigation_board_printvote"
            app:popUpTo="@id/navigation_board_votelist"
            app:popUpToInclusive="false"/>
    </fragment>

    <!-- 투표출력 폼 화면 -->
    <fragment
        android:id="@+id/navigation_board_printvote"
        android:name="com.example.myapplication.ui.board.PrintVote_Board"
        android:label="@string/title_board_printvote"
        tools:layout="@layout/board_printvote" >

        <!-- 투표 출력 폼 화면에서 투표글 목록으로 이동하는 액션 -->
        <action
            android:id="@+id/action_navigation_board_printvote_to_navigation_board_votelist"
            app:destination="@id/navigation_board_votelist"
            app:popUpTo="@id/navigation_board_votelist"
            app:popUpToInclusive="false" />
    </fragment>

    <!-- 기타 프래그먼트들 -->
    <!-- SafetyFragment, ChatFragment, MypageFragment 등 -->
</navigation>
