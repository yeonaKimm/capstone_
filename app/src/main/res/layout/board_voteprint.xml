<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.board.VotePrint_Board"
    android:padding="20dp">

    <!-- 게시글 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_line"
        android:padding="10dp" >

        <!-- 게시글 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="16dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_bokdak_round" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="익명"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024.03.29 02:23"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?attr/textAppearanceBody2" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회 92 | 관심 5"
                    android:textAppearance="?attr/textAppearanceBody2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/favoriteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_heart"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/MenuButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_menu"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- 게시글 내용 및 이미지 -->
        <TextView
            android:id="@+id/item_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나 알바 구하고 있는데"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더벤티 오픈 vs 맥날 주말
                          둘 중에 뭐가 나을지 눌러줘라."
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/water"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/drama"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더벤티 오픈"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody1"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_line"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <!-- 막대 1 -->
            <LinearLayout
                android:id="@+id/barContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/barFillOption1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="#B6DDFF"/>

                <TextView
                    android:id="@+id/tvBarLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="100%"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="맥날 주말"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody1"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_line"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <!-- 막대 2 -->
            <LinearLayout
                android:id="@+id/barContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/barFillOption2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="#B6DDFF"/>

                <TextView
                    android:id="@+id/tvBarLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0%"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/Vote_All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100명 투표"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


    <!-- 게시글 댓글 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/edittext_line"
        android:padding="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_bokdak_round"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="익명"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/31 19:51"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <ImageButton
                    android:id="@+id/heartButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="7dp"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/ic_heart"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/replyButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_reply"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="익아 맥날 진심 개힘들어.. 더벤티ㄱㄱ"
                android:textAppearance="?attr/textAppearanceBody2" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
