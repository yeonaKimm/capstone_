<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.safety.HomeNext_Safety"
    android:layout_margin="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- 소요시간 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치공유"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자의 위치를 공유합니다."
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- 출발지 지도 -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="136dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:src="@drawable/gps" />

        <!-- 도착지 지도 -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="136dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:src="@drawable/gps" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- 출발위치 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전남대학교 정문"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />

        <!-- 도착위치 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="미평아파트 3차"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/> <!-- 회색 밑줄 -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp">

        <!-- 소요시간 -->
        <TextView
            android:layout_width="0in"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="남은시간"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0in"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8분"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FD5585"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- 소요시간 -->
        <TextView
            android:layout_width="0in"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="연장하기"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- 귀가시간 연장을 선택할 수 있는 드롭다운 에디트텍스트 -->
        <Spinner
            android:id="@+id/spinner_timeplus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_line"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            android:textColor="#000000"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- 비상연락처 -->
        <TextView
            android:layout_width="0in"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="비상연락처"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0in"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="엄마"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>


    <!-- 위치 공유하기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >
        <Button
            android:id="@+id/share2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:onClick="share2"/>
    </LinearLayout>

</LinearLayout>
