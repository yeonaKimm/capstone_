<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.BuyPrint_Recruit"
    android:layout_margin="20dp">

    <!-- 공구글 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:src="@drawable/water"
            android:scaleType="centerCrop" />

        <!-- 게시글 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_bokdak_round" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나홀로"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남, 30대"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?attr/textAppearanceBody2" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일반펭귄"
                    android:textAppearance="?attr/textAppearanceBody2" />
            </LinearLayout>


            <ImageView
                android:id="@+id/MenuButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_menu"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- 회색 밑줄 -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/postTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생수 공구하실 분"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/postContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="혼자 사기엔 너무 비싸고 양도 많아서 같이
사실 분 구해요. 참여바람 ㅎㅎ"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/postContentTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구매처: https://www.coupang.com/"
            android:textColor="#3F51B5"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- 참여하기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/ic_heart" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="|   40,000원"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="25dp"
            android:text="참여하기"
            android:onClick="enter" />

    </LinearLayout>



</LinearLayout>
