<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.safety.MainActivity_Safety">

    <!-- 게시글 검색창 -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="검색어를 입력하세요"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_line"
        app:queryBackground="@android:color/transparent"
        tools:ignore="MissingConstraints" />

    <!-- 안전기능 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <!-- 안전귀가 -->
        <Button
            android:id="@+id/safety_bt"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/delivery2"
            android:text="안전귀가"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="16dp"
            android:drawablePadding="-20dp" />

        <!-- 통화화면 -->
        <Button
            android:id="@+id/call_bt"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/buy"
            android:text="통화화면"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="16dp"
            android:drawablePadding="-20dp" />

    </LinearLayout>

    <!-- 게시판 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <!-- 음성지원 -->
        <Button
            android:id="@+id/voice_bt"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/free"
            android:text="음성지원"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="16dp"
            android:drawablePadding="-20dp" />

        <!-- 비상연락처 -->
        <Button
            android:id="@+id/contact_bt"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/delivery2"
            android:text="비상연락처"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="16dp"
            android:drawablePadding="-20dp" />

    </LinearLayout>


    <!-- 안전기능 설명 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingBottom="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="안전기능이란?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="문의하기"
            android:textSize="15sp"
            android:textColor="@color/purple_500" />
    </LinearLayout>

    <!-- 안전기능 설명 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 안전귀가 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="136dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/gps" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 제목 -->
                    <TextView
                        android:id="@+id/titleTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사용자위치"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="3dp"
                        android:textStyle="bold" />

                    <!-- 내용 -->
                    <TextView
                        android:id="@+id/contentTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사용자가 외출할 시 사용자의 위치 접근을 허용합니다. 예상 소요시간보다 경과 됐을 경우 비상연락망에 사용자의 위치가 전송됩니다."
                        android:textColor="@color/material_dynamic_neutral20"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 통화화면 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="136dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/phone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 제목 -->
                    <TextView
                        android:id="@+id/titleTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="통화화면"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="3dp"
                        android:textStyle="bold" />

                    <!-- 내용 -->
                    <TextView
                        android:id="@+id/contentTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사용자가 상대방과 통화하는듯한 화면을 지원합니다. 실제로 통화 기능이 구현되진 않습니다."
                        android:textColor="@color/material_dynamic_neutral20"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 보이스가드 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="136dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/voice" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 제목 -->
                    <TextView
                        android:id="@+id/titleTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보이스가드"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="3dp"
                        android:textStyle="bold" />

                    <!-- 내용 -->
                    <TextView
                        android:id="@+id/contentTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="혼자 사는 1인가구 여성들을 위한 상황별 남성 목소리를 지원합니다. 음성은 표준어 버전과 사투리 버전으로 사용 가능합니다.."
                        android:textColor="@color/material_dynamic_neutral20"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 비상연락망 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="136dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/contact" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 제목 -->
                    <TextView
                        android:id="@+id/titleTextView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="비상연락망"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="3dp"
                        android:textStyle="bold" />

                    <!-- 내용 -->
                    <TextView
                        android:id="@+id/contentTextView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="안전기능 사용 시 위치를 전송할 연락처를 저장합니다. 긴급번호은 기본으로 지원됩니다."
                        android:textColor="@color/material_dynamic_neutral20"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>